<?xml version="1.0" encoding="UTF-8"?>   
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


<changeSet id="create-boardquestion-fk" author="MS">
  <addForeignKeyConstraint 
  baseTableName="question" baseColumnNames="board_id" 
  constraintName="link-tile-to-board" 
  referencedTableName="board" referencedColumnNames="id"
  onDelete="CASCADE" onUpdate="CASCADE"
  />
</changeSet>

<changeSet id="modify-id-column-for-question" author="MS">
  <addAutoIncrement tableName="question" columnName="id" startWith="100" incrementBy="1"/>
</changeSet>

</databaseChangeLog>